document.addEventListener('DOMContentLoaded', function() {
    const comics = [
        { title: 'Naruto', author: 'Masashi Kishimoto' },
        { title: 'One Piece', author: 'Eiichiro Oda' },
        { title: 'Attack on Titan', author: 'Hajime Isayama' },
        { title: 'Doraemon', author: 'Fujiko F. Fujio' }
    ];

    const comicList = document.getElementById('comics');

    comics.forEach(function(comic) {
        const listItem = document.createElement('li');
        listItem.textContent = `${comic.title} oleh ${comic.author}`;
        comicList.appendChild(listItem);
    });
});
